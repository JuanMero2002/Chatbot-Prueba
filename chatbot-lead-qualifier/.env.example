# ============================================
# CONFIGURACION DEL CHATBOT SPARKS IOT&ENERGY
# ============================================

# -----------------
# Flask Application
# -----------------
DEBUG=True
HOST=0.0.0.0
PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# -----------------
# CORS Configuration
# -----------------
# Orígenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://sparksenergy.io

# -----------------
# Database (Opcional)
# -----------------
# Actualmente usa sesiones en memoria. Para producción, configurar PostgreSQL:
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db

# -----------------
# WhatsApp Business API
# -----------------
# Para integración futura con WhatsApp Business API oficial
WHATSAPP_API_TOKEN=your-whatsapp-api-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Números de WhatsApp de Sparks IoT&Energy (separados por coma)
COMPANY_WHATSAPP_NUMBERS=+593 982840675,+593 962018222,+593 989831819

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=100

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# -----------------
# Email Notifications (Opcional)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@sparksenergy.io
NOTIFY_EMAIL=ventas@sparksenergy.io

# -----------------
# Información de la Empresa
# -----------------
COMPANY_NAME=Sparks IoT & Energy
COMPANY_EMAIL=info@sparksenergy.io
COMPANY_LOCATION=Edificio Manta Business Center, Torre B, Piso 3, Oficina 301
COMPANY_CITY=Manta, Manabi, Ecuador
BUSINESS_HOURS=Lunes a Sabado, 08:00 AM - 08:00 PM

# -----------------
# WordPress Integration (Opcional)
# -----------------
WORDPRESS_API_URL=https://sparksenergy.io/wp-json
WORDPRESS_API_KEY=your-wordpress-api-key-here

# Lead Qualification
LEAD_SCORE_THRESHOLD=60
MIN_QUALIFICATION_QUESTIONS=4

# Apache Spark (opcional)
SPARK_MASTER=local[*]
SPARK_APP_NAME=LeadAnalytics

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=20

# CORS
ALLOWED_ORIGINS=https://tudominio.com,http://localhost:3000
